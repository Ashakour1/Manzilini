generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                @id
  email                 String                @unique
  name                  String
  image                 String?
  role                  Role                  @default(USER)
  status                UserStatus            @default(ACTIVE)
  password              String
  is_sent_email         Boolean               @default(false)
  is_sent_at            DateTime?
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  // property_applications PropertyApplication[]
  properties Property[]

  // link to agent profile
  agentId String?
  agent   FieldAgent? @relation(fields: [agentId], references: [id])
}

model Landlord {
  id              String          @id
  name            String
  email           String          @unique
  phone           String?
  company_name    String?
  address         String?
  isVerified      Boolean         @default(false)
  status          LandlordStatus  @default(ACTIVE)
  rejectionReason String?
  inactiveReason  String?
  is_sent_email   Boolean         @default(false)
  is_sent_at      DateTime?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  properties      Property[]
  emailLogs       EmailLog[]
}

model Property {
  id                    String                @id
  title                 String
  description           String
  property_type         propertyType          @default(APARTMENT)
  status                Status                @default(FOR_RENT)
  price                 Float
  currency              Currency              @default(USD)
  payment_frequency     PaymentFrequency      @default(MONTHLY)
  deposit_amount        Float?
  country               String
  city                  String
  address               String
  zip_code              String
  latitude              Float
  longitude             Float
  bedrooms              Int?
  bathrooms             Int?
  garages               Int?
  size                  Float?
  is_furnished          Boolean?              @default(false)
  floor                 Int?
  total_floors          Int?
  balcony               Boolean?              @default(false)
  amenities             String[]
  is_featured           Boolean?              @default(false)

  landlord_id           String?
  landlord              Landlord?             @relation(fields: [landlord_id], references: [id], onDelete: Restrict)
  createdAt             DateTime              @default(now())
  updatedAt             DateTime              @updatedAt
  property_applications PropertyApplication[]
  images                PropertyImages[]
  payments              Payment[]
  
  is_published           Boolean?              @default(false)
  

  // creator 
  userId String?
  user User? @relation(fields: [userId], references: [id], onDelete: Restrict)


}

model PropertyImages {
  id         String   @id @default(cuid())
  propertyId String
  url        String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model PropertyApplication {
  id         String            @id @default(cuid())
  propertyId String
  tenantId   String
  message    String?
  status     ApplicationStatus @default(PENDING)
  createdAt  DateTime          @default(now())
  property   Property          @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  // tenant     User              @relation(fields: [tenantId], references: [id])
  payments   Payment[]
}

model Payment {
  id            String        @id @default(cuid())
  applicationId String
  propertyId    String
  amount        Float
  status        PaymentStatus @default(PENDING)

  paymentDate DateTime?           @default(now())
  createdAt   DateTime            @default(now())
  application PropertyApplication @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  property    Property            @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model FieldAgent {
  id             String   @id
  name           String
  email          String   @unique
  phone          String?
  image          String?
  document_image String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // reverse relation: User can link to this agent
  users User[]
}

model IdCounter {
  key       String   @id
  tableName String
  yearMonth String
  value     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([tableName, yearMonth])
  @@map("id_counters")
}

model EmailLog {
  id            String        @id @default(cuid())
  recipientEmail String
  recipientName String?
  subject       String
  message       String        @db.Text
  emailType     EmailType
  status        EmailStatus   @default(SENT)
  errorMessage  String?       @db.Text
  landlordId    String?
  landlord      Landlord?     @relation(fields: [landlordId], references: [id], onDelete: SetNull)
  metadata      String?       @db.Text // JSON string for additional data
  resendId      String?       // Resend API message ID
  createdAt     DateTime      @default(now())

  @@index([recipientEmail])
  @@index([emailType])
  @@index([status])
  @@index([landlordId])
  @@index([createdAt])
  @@map("email_logs")
}

enum LandlordStatus {
  ACTIVE
  INACTIVE
}
enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum ApplicationStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
  PROPERTY_OWNER
  AGENT
}

enum propertyType {
  APARTMENT
  HOUSE
  STUDIO
  OFFICE
  LAND
}

enum Status {
  FOR_SALE
  FOR_RENT
  SOLD
  RENTED
}

enum Currency {
  USD
  EUR
  GBP
  CAD
  AUD
  NZD
  CHF
  JPY
  CNY
}

enum PaymentFrequency {
  MONTHLY
  YEARLY
  WEEKLY
  DAILY
}

enum ContactMethod {
  EMAIL
  PHONE
  WHATSAPP
  TELEGRAM
  SMS
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum EmailType {
  WELCOME
  PASSWORD_RESET
  VERIFICATION
  LANDLORD_APPROVAL
  LANDLORD_REJECTION
  LANDLORD_INACTIVE
  LANDLORD_ACTIVATION
  TENANT_REQUEST
  NOTIFICATION
  USER_CREDENTIALS
  USER_ACTIVATION
  USER_DEACTIVATION
}

enum EmailStatus {
  SENT
  FAILED
  PENDING
}
